{
  "name": "phase2-intermediate",
  "version": "1.0.0",
  "description": "Phase 2: Backend Fundamentals - Node.js, Express.js, MongoDB, REST APIs, Authentication, and Backend Architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "db:seed": "ts-node scripts/seed.ts",
    "db:drop": "ts-node scripts/drop.ts",
    "challenge1": "ts-node src/challenge1-nodejs-core/index.ts",
    "challenge2": "ts-node src/challenge2-express-mastery/index.ts",
    "challenge3": "ts-node src/challenge3-mongodb-integration/index.ts",
    "challenge4": "ts-node src/challenge4-auth-authorization/index.ts",
    "challenge5": "ts-node src/challenge5-api-testing/index.ts",
    "test:challenge1": "jest --testPathPattern=challenge1",
    "test:challenge2": "jest --testPathPattern=challenge2",
    "test:challenge3": "jest --testPathPattern=challenge3",
    "test:challenge4": "jest --testPathPattern=challenge4",
    "test:challenge5": "jest --testPathPattern=challenge5",
    "validate": "npm run lint && npm run format:check && npm run test:coverage",
    "docs": "swagger-jsdoc -d swaggerOptions.js -o swagger.json src/routes/*.ts"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "mongodb",
    "mongoose",
    "jwt",
    "authentication",
    "authorization",
    "rest-api",
    "backend",
    "middleware",
    "testing",
    "swagger"
  ],
  "author": "Miguel",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.12.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
